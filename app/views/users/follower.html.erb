<div class="container" align="center">
	<table class="user_index">
		<% @user.follower_user.each do |user| %>
			<tr>
				<td>
					<%= link_to user_path(user) do %>
						<%= attachment_image_tag user, :profile_image, size:"100x100", fallback: "no_image.jpg" %>
						<%= user.name %>
					<% end %>
				</td>

				<td>
					<% unless user == current_user %>
						<% if current_user.following?(user) %>
							<%= link_to "Unfollow", unfollow_path(user.id), method: :get %>
						<% else %>
							<%= link_to "Follow", follow_path(user.id), method: :get %>
						<% end %>
					<% end %>
				</td>
			</tr>
		<% end %>
	</table>
</div>