<div class="container" align="center">
	<table class="user_index">
		<% if user_signed_in? %>
			<% @users.each do |user| %>
				<% if user.is_active == "有効" %>
					<tr>
						<td>
							<%= link_to user_path(user) do %>
								<%= attachment_image_tag user, :profile_image, size:"100x100", fallback: "no_image.jpg" %>
								<%= user.name %>
							<% end %>
						</td>

						<td class="followbutton_<%= user.id %>">
							<% unless user == current_user %>
								<%= render "followbutton", user: user %>
							<% end %>
						</td>
					</tr>
				<% end %>
			<% end %>
		<% end %>
	</table>
</div>