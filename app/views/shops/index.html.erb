<div class="erorr">
	<% if @shop.errors.any? %>
		<h3>There are <%= @shop.errors.count %> errors</h3>
			<ul>
				<% @shop.errors.full_messages.each do |message| %>
					<li><%= message %></li>
				<% end %>
			</ul>
	<% end %>
</div>

<div class="container" align="center">
	<% @search_shops.each do |shop| %>
		<div class="col-md-4">
			<div class="set">
				<div class="img_wrap">
					<%= link_to shop_path(shop.id) do %>
					<%= attachment_image_tag shop, :shop_image, size:"300x300", fallback: "no_image.jpg" %>
					<% end %>
				</div>
			</div>
		</div>
	<% end %>
</div>