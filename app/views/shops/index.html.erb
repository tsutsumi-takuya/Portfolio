<div class="erorr">
	<% if @shop.errors.any? %>
		<h3>There are <%= @shop.errors.count %> errors</h3>
			<ul>
				<% @shop.errors.full_messages.each do |message| %>
					<li><%= message %></li>
				<% end %>
			</ul>
	<% end %>
</div>

<div class="container" align="center">
	<%= link_to "New SHOP", new_shop_path %>
	<div class="row justify-content-around">
			<% @shops.each do |shop| %>
				<%= link_to shop_path(shop.id) do %>
					<%= attachment_image_tag shop, :shop_image, size:"300x300" %>
				<% end %>
			<% end %>
		</div>
	</div>
</div>