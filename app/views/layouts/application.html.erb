<!DOCTYPE html>
<html>
    <head>
        <title>Gather Coffeestand</title>
        <%= csrf_meta_tags %>
        <%= csp_meta_tag %>

        <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
        <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    </head>

    <body>
        <header>
            <div class="container" align="center">
                <nav class="nav navbar-nav navbar-center">
                    <h3><%=link_to "Gather Coffeestand", root_path %></h3>
                </nav>

                <nav class="head_nav">
                    <% if user_signed_in? %>
                        <%= link_to "Top", root_path %>
                        <%= link_to "About", home_about_path %>
                        <%= link_to "Shops", shops_path %>
                        <%= link_to "Users", users_path %>
                        <%= link_to "Mypage", user_path(current_user.id) %>
                        <%= link_to "Logout", destroy_user_session_path, method: :delete %>
                    <% else %>
                        <p><%= link_to "Top", root_path %></p>
                        <p><%= link_to "About", home_about_path %></p>
                        <p><%= link_to "Signup", new_user_registration_path %></p>
                        <p><%= link_to "Login", new_user_session_path %></p>
                    <% end %>
                </nav>
            </div>
        </header>

    <%= yield %>

    <footer align="center">
        <h4>- All Rights Researved by Gather Coffeestand.inc -</h4>
    </footer>
  </body>
</html>
