<!DOCTYPE html>
<html>
    <head>
        <title>Gather Coffeestand</title>
        <%= csrf_meta_tags %>
        <%= csp_meta_tag %>

        <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
        <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
        <link href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" rel="stylesheet">
    </head>

    <body>
        <header class="navbar" align="center">
            <div class="container">
                <nav class="navbar-center">
                    <h3><%=link_to "Gather Coffeestand", root_path %></h3>
                    <%= link_to "New SHOP", new_shop_path %>
                </nav>
                <nav class="nav" align="center">
                <%= form_tag(shops_path, :method => "get") do %>
                    <%= text_field_tag :search, params[:search] %>
                    <%= submit_tag "🔍", :shop_name => nil %>
                <% end %>
            </nav>

                <nav>
                    <span class="nav" align="center">
                        <% if user_signed_in? %>
                            <%= link_to "Top", root_path %>
                            <%= link_to "About", home_about_path %>
                            <%= link_to "Shops", shops_path %>
                            <%= link_to "Users", users_path %>
                            <%= link_to "Mypage", user_path(current_user.id) %>
                            <%= link_to "Logout", destroy_user_session_path, method: :delete %>
                        <% else %>
                            <%= link_to "Top", root_path %>
                            <%= link_to "About", home_about_path %>
                            <%= link_to "Signup", new_user_registration_path %>
                            <%= link_to "Login", new_user_session_path %>
                        <% end %>
                    </span>
                </nav>
            </div>
        </header>

    <%= yield %>

    <footer align="center">
        <h4>- All Rights Researved by Gather Coffeestand.inc -</h4>
    </footer>
  </body>
</html>
